@page
@model VWSR.Web.Pages.ScheduleModel
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<VWSR.Web.SharedResource> L
@{
    ViewData["Title"] = L["MenuSchedule"];
}

<h1 class="mb-3">@L["ScheduleTitle"]</h1>

<p class="text-muted">@L["Minimumtask"]</p>

<h5>@L["DaysText"]</h5>
<table class="table table-sm table-bordered">
    <thead>
        <tr>
            <th>@L["Time"]</th>
            <th>@L["Employee"]</th>
            <th>@L["Task"]</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.DayItems)
    {
        <tr>
            <td>@item.Time</td>
            <td>@item.Employee</td>
            <td>@item.Task</td>
        </tr>
    }
    </tbody>
</table>

<h5 class="mt-4">@L["WeekDays"]</h5>
<table class="table table-sm table-bordered">
    <thead>
        <tr>
            <th>@L["Time"]</th>
            <th>@L["Employee"]</th>
            <th>@L["Task"]</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.WeekItems)
    {
        <tr>
            <td>@item.Day</td>
            <td>@item.Employee</td>
            <td>@item.Task</td>
        </tr>
    }
    </tbody>
</table>
